<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true"><shape>
            <gradient android:angle="225" android:endColor="@color/button_color_red_bright" android:startColor="@color/button_color_red_gradient" />

            <stroke android:width="3dp" android:color="@color/button_color_red_dark" />

            <corners android:radius="15dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="225" android:endColor="@color/button_color_red" android:startColor="@color/button_color_red" />

            <stroke android:width="3dp" android:color="@color/button_color_red_dark" />

            <corners android:radius="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="225" android:endColor="@color/button_color_red" android:startColor="@color/button_color_red_gradient" />

            <stroke android:width="3dp" android:color="@color/button_color_red_stroke" />

            <corners android:radius="15dp" />
        </shape></item>

</selector>
